{
	"comment": "Module definition file.",
	"name": "jobs",
	"description": "View and post OCDLA jobs.",
	"files": [
		"Job.php",
		"ListTemplate.php"
	],
	"routes": {
		"jobs": {
			"callback":"home",
			"content-type":"text\/html"
		},
		"jobs/new": {
			"callback": "postingForm",
			"content-type": "text\/html"
		},
		"jobs/create": {
			"callback": "createPosting",
			"content-type": "text\/html"
		},
		"attachment/%id/%name": {
			"callback": "getAttachment",
			"content-type": "application/base64"
		},
		"object/job/list": {
			"callback": "listJobs",
			"content-type": "text\/html"
		},
		"job/%id/edit": {
			"callback": "edit",
			"content-type": "text\/html"
		},
		"job/%id/delete": {
			"callback": "deletePosting",
			"content-type": "text\/html"
		},
		"documents": {
			"callback": "showSubjects",
			"content-type": "text\/html"
		},
		"documents/%subject": {
			"callback": "showDocuments",
			"content-type": "text\/html"
		}
	}
}